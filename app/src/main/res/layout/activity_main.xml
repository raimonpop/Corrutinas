<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/pbJob1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    <ProgressBar
        android:id="@+id/pbJob2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/pbJob1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <Button
        android:id="@+id/btmStartJob1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Start #1"
        android:backgroundTint="#0f0f0f0f"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/pbJob2"
        app:layout_constraintEnd_toStartOf="@id/btmStopJob1"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/btmStopJob1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Stop #1"
        android:backgroundTint="#0f0f0f0f"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/pbJob2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btmStartJob1"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp" />
    <Button
        android:id="@+id/btmStartJob2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Start #2"
        android:backgroundTint="#0f0f0f0f"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/btmStartJob1"
        app:layout_constraintEnd_toStartOf="@id/btmStopJob2"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/btmStopJob2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Stop #2"
        android:backgroundTint="#0f0f0f0f"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btmStopJob1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btmStartJob2"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>